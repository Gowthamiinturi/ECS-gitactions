{
  "family": "simplyicard-dev-taskdefinition",
  "networkMode": "bridge",
  "requiresCompatibilities": ["EC2"],
  "executionRoleArn": "arn:aws:iam::253850235518:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "mycontainer",
      "image": "amazon/amazon-ecs-sample",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 0,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "DB_HOST", "value": "DB_HOST_PLACEHOLDER" },
        { "name": "DB_USER", "value": "DB_USER_PLACEHOLDER" },
        { "name": "DB_PASSWORD", "value": "DB_PASSWORD_PLACEHOLDER" },
        { "name": "DB_NAME", "value": "DB_NAME_PLACEHOLDER" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/simplyicard-dev",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "cpu": "256",
  "memory": "512"
}
